@model List<Employee>
@{
    ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>
<a asp-controller="Employee" asp-action="Add"><span class="fa fa-male"></span>&nbsp;Add New Employee</a>
<form asp-controller="Employee" asp-action="Index">
    <p>
        Name: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table table-bordered table-striped" id="empTable">
    <thead>
        <tr>
            <th id="empIds">Employee ID</th>
        <th>Name</th>
        <th>Title</th>
        <th>Start Date</th>
        <th>Pay Rate</th>
        <th>Hours</th>
        <th>Department ID</th>
        <th>Department Name</th>
        <th></th></tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
        <tr>
            <td id="@emp.Id">@emp.Id</td>
            <td>@emp.Name</td>
            <td>@emp.Title</td>
            <td>@emp.StartDate.ToString("MM/dd/yyyy")</td>
            <td>@emp.PayRate</td>
            <td>@emp.HoursString</td>
            <td>@emp.DepartmentId</td>
            <td>@emp.Department.DepartmentName</td>
            <td>
                <a asp-controller="Employee" asp-action="Edit"
                   asp-route-id="@emp.Id">Edit(ASP)</a>
                   <a href="#" onclick="editEmployee(this)">Edit(JS)</a>
                <a asp-controller="Employee" asp-action="Delete"
                   asp-route-id="@emp.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
